<!DOCTYPE html>
<html lang="${request.locale_name}" xmlns:tal="http://xml.zope.org/namespaces/tal" xmlns:metal="http://xml.zope.org/namespaces/metal">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Personlig oversikt over kalender, vær og offentlig transport der du er nå">
    <link rel="shortcut icon" href="${request.static_url('homescreen:static/today-xxl.png')}">
    <link href="${request.static_url('homescreen:static/index.css')}" rel="stylesheet">
    <title>Vær for Oslo</title>
  </head>
  <body>
    <header>
      <h1>${weather_h1}</h1>
    </header>
    <article class="weather-container" tabindex="-1" tal:repeat="it forecasts">
      <span class="temperature" tal:content="it.temperature°"></span>
      <i tal:condition="it.symbol_number_ex EQ '4'" tal:attributes="class wi wi-cloud"></i>
      <i tal:condition="it.symbol_number_ex EQ '14'" tal:attributes="class wi wi-day-alt-snow-thunderstorm"></i>
      <i tal:condition="it.symbol_number_ex EQ '3'" tal:attributes="class wi wi-day-cloudy"></i>
      <i tal:condition="it.symbol_number_ex EQ '7'" tal:attributes="class wi wi-day-rain"></i>
      <i tal:condition="it.symbol_number_ex EQ '25'" tal:attributes="class wi wi-day-showers"></i>
      <i tal:condition="it.symbol_number_ex EQ '30'" tal:attributes="class wi wi-day-sleet-storm"></i>
      <i tal:condition="it.symbol_number_ex EQ '12'" tal:attributes="class wi wi-day-sleet"></i>
      <i tal:condition="it.symbol_number_ex EQ '13'" tal:attributes="class wi wi-day-sleet"></i>
      <i tal:condition="it.symbol_number_ex EQ '14'" tal:attributes="class wi wi-day-snow-thunderstorm"></i>
      <i tal:condition="it.symbol_number_ex EQ '8'" tal:attributes="class wi wi-day-snow"></i>
      <i tal:condition="it.symbol_number_ex EQ '47'" tal:attributes="class wi wi-day-sprinkle"></i>
      <i tal:condition="it.symbol_number_ex EQ '2'" tal:attributes="class wi wi-day-sunny-overcast"></i>
      <i tal:condition="it.symbol_number_ex EQ '1'" tal:attributes="class wi wi-day-sunny"></i>
      <i tal:condition="it.symbol_number_ex EQ '14'" tal:attributes="class wi wi-day-thunderstorm"></i>
      <i tal:condition="it.symbol_number_ex EQ '15'" tal:attributes="class wi wi-fog"></i>
      <i tal:condition="it.symbol_number_ex EQ '5'" tal:attributes="class wi wi-hail"></i>
      <i tal:condition="it.symbol_number_ex EQ '11'" tal:attributes="class wi wi-lightning"></i>
      <i tal:condition="it.symbol_number_ex EQ 'NaN'" tal:attributes="class wi wi-na"></i>
      <i tal:condition="it.symbol_number_ex EQ '48'" tal:attributes="class wi wi-rain-mix"></i>
      <i tal:condition="it.symbol_number_ex EQ '46'" tal:attributes="class wi wi-raindrop"></i>
      <i tal:condition="it.symbol_number_ex EQ '42'" tal:attributes="class wi wi-sleet"></i>
      <i tal:condition="it.symbol_number_ex EQ '49'" tal:attributes="class wi wi-snow"></i>
      <i tal:condition="it.symbol_number_ex EQ '50'" tal:attributes="class wi wi-snowflake-cold"></i>
      <i tal:condition="it.symbol_number_ex EQ '25'" tal:attributes="class wi wi-storm-showers"></i>
      <span class="time"><time tal:attributes="datetime it.from" tal:content="it.from"></time><span> ${dt_separator} </span> <time tal:attributes="datetime it.to" tal:content="it.to"></time></span>
    </article>
    <link href="${request.static_url('homescreen:static/w/css/weather-icons.min.css')}" type="text/css" rel="stylesheet">
    <link href="${request.static_url('homescreen:static/w/css/weather-icons-wind.min.css')}" type="text/css" rel="stylesheet">
  </body>
</html>
