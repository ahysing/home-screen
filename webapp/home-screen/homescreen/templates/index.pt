<!DOCTYPE html>
<html lang="${request.locale_name}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Personlig oversikt over kalender, vær og offentlig transport der du er nå">
    <link rel="shortcut icon" href="${request.static_url('homescreen:static/today-xxl.png')}">
    <title>Aktuelt nå</title>
    <!-- Bootstrap core CSS -->
    <link href="//oss.maxcdn.com/libs/twitter-bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet">
    <link href="${request.static_url('homescreen:static/index.css')}" rel="stylesheet">
  </head>
  <body>
    <div class="container">
      <div class="row">
        <span class="col-md-12">
          <section class="clock" accesskey="c C k K">
          </section>
        </span>
      </div>
      <div class="row">
        <span class="col-md-6">
          <section class="transport">
            <noscript>
              <iframe scrolling="no" src="${request.route_url('transport:next:static')}"></iframe>
            </noscript>
          </section>
        </span>
        <span class="col-md-5">
          <section class="forecast">
            <noscript>
              <iframe scrolling="no" align="right" src="${request.route_url('forecast:static')}"></iframe>
            </noscript>
            <footer>
              <small class="forecast-credits"></small>
            </footer>
          </section>
        </span>
      </div>
      <!--
      <span class="col-md-12">
        <section class="mail" data-mail.url="${request.route_url('mail:calendar')}">
          <div class="authenticate ${show_authenticate}">
            <form method="POST" action="${request.route_url('index:authenticate')}">
              <input id="mail-username" type="email" name="username" placeholder="fornavn.etternavn@acme.com" autofocus>
              <input id="mail-password" type="password" name="password" placeholder="passord">
              Lagre brukernavn og passord? <input id="mail-save" type="checkbox" name="save" checked>
              <input type="submit" value="Logg in i kalender" onclick="save_submit()">
            </form>
          </div>
        </section>
      </span>
      -->
    </div>
    <!-- binds form values to storage for next time use -->
    <script type="text/javascript">
    var MAIL_USERNAME_KEY = 'mail_u';
    var MAIL_PASSWORD_KEY = 'mail_p';
    var MAIL_SUBMIT_KEY = 'mail_s';
    var id = (new Date()).getTime();
    function save_username() {
        'use strict';
        var username = document.getElementById('mail-username').value;
        var obj = {'username':username, 'id':id};

        var blob = JSON.stringify(obj);
        localStorage.setItem(MAIL_USERNAME_KEY, blob);
    }

    function save_password() {
        'use strict';
        var password = document.getElementById('mail-password').value;
        var obj = {'password':password, 'id':id};

        var blob = JSON.stringify(obj);
        localStorage.setItem(MAIL_PASSWORD_KEY, blob);
    }

    function save_submit() {
        'use strict';
        var obj = {'id':id};
        var blob = JSON.stringify(obj);
        if (document.getElementById('mail-save').checked) {
            localStorage.setItem(MAIL_SUBMIT_KEY, blob);
        } else {
            localStorage.removeItem(MAIL_USERNAME_KEY);
            localStorage.removeItem(MAIL_PASSWORD_KEY);
        }
    }
    if (document.getElementById('mail-username')) document.getElementById('mail-username').addEventListener('input', save_username);
    if (document.getElementById('mail-password')) document.getElementById('mail-password').addEventListener('input', save_password);
    </script>
    <script src="${request.static_url('homescreen:static/clock.js')}" defer='defer'></script>
    <script src="${request.static_url('homescreen:static/forecast.js')}" defer='defer'></script>
    <link href="${request.static_url('homescreen:static/w/css/weather-icons.min.css')}" type="text/css" rel="stylesheet">
    <link href="${request.static_url('homescreen:static/w/css/weather-icons-wind.min.css')}" type="text/css" rel="stylesheet">
    <script src="${request.static_url('homescreen:static/public_transport.js')}" defer='defer'></script>
    <script src="${request.static_url('homescreen:static/mail_exchange.js')}" defer='defer'></script>
    <!-- Bootstrap core JavaScript ================================================== -->
    <script src="//oss.maxcdn.com/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="//oss.maxcdn.com/libs/twitter-bootstrap/3.0.3/js/bootstrap.min.js"></script>
  </body>
</html>
